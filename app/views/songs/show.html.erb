	<div class="body">
		<div class="row">
	          <div class="small-12 small-offset-1 columns">
				<h1><%= @song.title.capitalize %> </h1>
			  </div>
		</div>	  	

		<div class="row">
			<div class="small-3 small-offset-1 columns">
				<%= image_tag((@song.title+".jpg"), class: 'sheet') %>
			</div>
			
			<% @videos.each do |video| %>
			
				<%= raw video.url %> 
			
			<% end %>
			
		<div class="row">
			<% @midis.each do |midi| %>
				<div class="small-4 small-offset-6 columns">
					<audio src="/songs/<%= midi.url %>" controls preload />
				</div>	
			<% end %>	
		</div>	

	</div>	


<!-- http://es.slideshare.net/txipi/las-nuevas-api-de-audio-en-html5# -->
<%= button_to('Comment', new_instrument_song_comment_path(@instrument.slug, @song.slug), method: :get) %>
<ul>
<% @comments.each do |comment| %>
	<li><%= comment.content %> 
	<% if comment.user == current_user %>
	<%= link_to 'Edit', edit_instrument_song_comment_path(@instrument.slug, @song.slug, comment.id) %> <%= link_to 'Delete', instrument_song_comment_path(@instrument.slug, @song.slug, comment.id), method: :delete %></li>
	<% end %>
<% end %>
</ul>
