<body>
	<div class="row">
          <div class="small-12 columns">
			<h1><%= @song.title %> </h1>
		  </div>
	</div>	  	

	<div class="row">
		<div class="small-3 columns">
			<%= image_tag(@song.title+".jpg") %>
		</div>
		<% @videos.each do |video| %>
		<div class="small-9 columns">
			<iframe width="500px" height="300px" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
		</div>
		<% end %>
	</div>	
		
	<div class="row">
	<% @midis.each do |midi| %>
		<div class="small-12 columns">
			<audio src="<%= midi.url %>" controls preload />
		</div>		
	<% end %>
	</div>	


<!-- http://es.slideshare.net/txipi/las-nuevas-api-de-audio-en-html5# -->
