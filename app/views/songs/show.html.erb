
		<div class="row">
	          <div class="small-12 small-offset-1 columns">
				<h1><%= @song.title.capitalize %> </h1>
			  </div>
		</div>	  	

		
	<div class="row">
			<div id="music_sheet" class='sheet'>
				<%= image_tag(@song.music_sheets.url) %>
			</div>
			
			<% @videos.each do |video| %>
			
				<%= raw video.url %> 
			
			<% end %>
			
		<div class="row">
			<% @midis.each do |midi| %>
				<div class="small-4 small-offset-6 columns">
					<audio src="/songs/<%= midi.url %>" controls preload />
				</div>	
			<% end %>	
		</div>	

	</div>	

<iframe src="https://embed.spotify.com/?uri=spotify:track:24UStI5AYA7g5ufFDh3LH0" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>

<!-- http://es.slideshare.net/txipi/las-nuevas-api-de-audio-en-html5# -->
<% if @comments.empty? %>
	<%= button_to('Be the first to comment!', new_instrument_song_comment_path(@instrument.slug, @song.slug), method: :get) %>
<% else %>
	<%= button_to('Comment', new_instrument_song_comment_path(@instrument.slug, @song.slug), method: :get) %>
<% end %>

<% @comments.each do |comment| %>
<div style="border: 1px solid black">
	<div style="border: 1px solid black"><%= comment.user.email %> said:</div>
	<div style="border: 1px solid black"><%= comment.content %></div>
	<div style="border: 1px solid black">Published: <%= comment.created_at %> | Last update: <%= comment.updated_at %>
		<% if comment.user == current_user %>
			<%= link_to 'Edit', edit_instrument_song_comment_path(@instrument.slug, @song.slug, comment.id) %> <%= link_to 'Delete', instrument_song_comment_path(@instrument.slug, @song.slug, comment.id), method: :delete %></li>
		<% end %>
	</div>
</div>
<br>
<% end %>