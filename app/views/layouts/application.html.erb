<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
</head>
<body>
  <!-- <div class="body"> -->
    <div id="container">
    <div class="topbar">
      <div id="user_nav">
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
          <%= link_to'Home', root_path, method: :get, class: 'home' %> |
          <%= link_to 'Edit profile', edit_user_registration_path, html_options = {class: "login"} %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "login" %> 
           
        <% else %>
        <%= link_to'Home', root_path, method: :get, class: 'home' %> |
          <%= link_to "Register", new_user_registration_path, html_options = {class: "login"} %> |
          <%= link_to "Login", new_user_session_path, class: "login" %> 
           
        <% end %>

        
      </div>
      <span class="topbarlogo"> MusicApp&reg;, developed with love and patience </span>

      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>

      <%= yield %>
  
   </div> 
  <!-- </div> 
 -->
 <%= javascript_include_tag 'application' %>

</body>
</html>
